@model TaskAuthenticationAuthorization.Models.LoginModel
<link rel="stylesheet" href="~/css/tasks.css" />
<h2>Please, login for enter to site</h2>

<a asp-action="Register" asp-controller="Account">Registration</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">

    <div class="validation" asp-validation-summary="All" />
    <div>
        <div class="form-group" >
            <label asp-for="Email"> Enter Email  </label>
            <input type="text" asp-for="Email" id="one" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label>
            <input type="text" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-outline-dark" />
        </div>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}